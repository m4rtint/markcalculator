<div class="row">
<%= form_tag({:controller => 'subject' , :action => 'post_subjects',  :method => 'post'},{:class => 'form-horizontal'})  do %>
    <div class="form-group form-group-lg">
        <div class="col-md-4 col-sm-4 col-xs-4 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        <%= text_field_tag :courseName,"" ,:class => 'form-control', placeholder: "Course Name / Code", :required => true %>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
        <%= text_field_tag :weight,"" ,:class => 'form-control', placeholder: "Credit", :required => true %>
        </div>
        <div class="col-md-1 col-sm-1 col-xs-1">
        <%= submit_tag "+", class: "btn btn-success btn-lg" %>
        </div>
    </div>
<% end %>
<br><br><br>
</div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <ul class="nav nav-pills nav-justified">
                <% @subject_index.each do |s| %>
                <li role="presentation" class=<%= 'active' if params[:cid] == s.id.to_s %>>
                    <a href= <%= '/term/'+s.term_id.to_s+'/courses/'+s.id.to_s %>> <%= s.name %></a>
                </li>
                <% end %>
                <li role="presentation" class=<%= 'active' if current_page?("/overall/"+params[:tid]) %>>
                    <a href= <%= '/overall/'+params[:tid] %> >Overall</a>
                </li>
            </ul>
        </div>
    </div>
    <hr>
