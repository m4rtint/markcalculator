<div class="container-fluid">
<div class="row">
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <div class="jumbotron">
        <%= form_tag :controller => "start", :action => "post_first_term", :method => "post" do %>
            <%= label_tag("Term") %>
            <br>
            <%= text_field_tag :termName, "", class:'form-control', :placeholder => "Term Name / Year", :required => true %>
            <br>
            <%= label_tag("Course Name") %>
            <br>
            <%= text_field_tag :courseName, "", class:'form-control', :placeholder => "Course Name / Code", :required => true %>
            <br>
            <%= label_tag("Weight / Credit") %>
            <br>
            <%= number_field_tag :weight, "", class:'form-control', :placeholder => "Weight / Credits",:step => 'any', :required => true %>
            <br>
            <%= submit_tag "Create", :class => "btn btn-primary btn-lg btn-block" %>
            <%= link_to "Log Out", "/sign_out",method: :delete,:class => "btn btn-danger btn-lg btn-block" %>
        <% end %>
            <br>
        </div>
    </div>
</div>
</div>
